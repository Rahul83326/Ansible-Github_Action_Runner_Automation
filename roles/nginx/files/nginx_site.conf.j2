server {
    listen 80;
    server_name {{ DOMAIN_NAME }};
    
    root {{STATIC_SITE_PATH}}/{{ BUILD_PATH }};
    index index.html index.html;
    
    location / {
        try_files $uri $uri/ =404;
    }
    
    error_log /var/log/nginx/{{ SITE_NAME }}_error.log;
    access_log /var/log/nginx/{{ SITE_NAME }}_access.log;
}
[Unit]
Description=uWSGI Emperor service
After=syslog.target

[Service]
User={{ SYSTEM_USER }}
Group={{ SYSTEM_GROUP }}

WorkingDirectory=/home/ubuntu/actions-runner/_work/{{ GITHUB_REPOSITORY }}/{{ GITHUB_REPOSITORY }}

ExecStart=poetry run uwsgi --emperor /home/ubuntu/{{ DJANGO_PROJECT_NAME }}/uwsgi.ini

Restart=always
KillSignal=SIGQUIT

Type=notify
NotifyAccess=all

[Install]
WantedBy=multi-user.target